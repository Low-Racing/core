# Enable hoisting for @heroui packages
public-hoist-pattern[]=*@heroui/*

# Increase network timeout to 10 minutes
network-timeout=600000

# Set the package-lock to version 2
package-lock=true
lockfile-version=2

# Set the node-linker to node-modules
node-linker=node-modules

# Enable strict SSL
strict-ssl=true

# Set the registry to the default npm registry
registry=https://registry.npmjs.org/

# Disable package-lock for CI
package-lock=false

# Set the cache directory
cache=${HOME}/.npm

# Set the logs directory
logs-dir=${HOME}/.npm/_logs

# Set the log level
loglevel=notice

# Set the save-prefix
save-prefix=^

# Set the save-exact
save-exact=true

# Set the engine-strict
engine-strict=true