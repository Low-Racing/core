# Configurações de cache e instalação
cache-min=9999999
prefer-offline=true

# Configurações de rede
timeout=600000
network-concurrency=1
fetch-retries=5
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Configurações de instalação
legacy-peer-deps=true
strict-peer-dependencies=false
prefer-dedupe=true

# Configurações de log
loglevel=warn

# Configurações de pacote
package-lock=true
lockfile-version=2
engine-strict=true

# Configurações específicas para o Next.js
shamefully-hoist=true

# Configurações de proxy (se necessário)
# proxy=http://proxy.company.com:8080
# https-proxy=http://proxy.company.com:8080
# strict-ssl=false

# Set the node-linker to node-modules
node-linker=node-modules

# Enable strict SSL
strict-ssl=true

# Set the registry to the default npm registry
registry=https://registry.npmjs.org/

# Disable package-lock for CI
package-lock=false

# Set the cache directory
cache=${HOME}/.npm

# Set the logs directory
logs-dir=${HOME}/.npm/_logs

# Set the log level
loglevel=notice

# Set the save-prefix
save-prefix=^

# Set the save-exact
save-exact=true

# Set the engine-strict
engine-strict=true